generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_UPLOAD_SCHEMA_URL")
  referentialIntegrity = "prisma"
}

model Bookmark {
  id                Int    @id @default(autoincrement())
  bookmarkName      String
  placeName         String
  placeUrl          String
  categoryName      String
  addressName       String
  roadAddressName   String
  bookMarkId        String
  phone             String
  categoryGroupCode String
  categoryGroupName String
  x                 String
  y                 String
  userId            Int
  User              User   @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user_fk_3")

  @@index([userId], map: "user_fk_3_idx")
}

model Post {
  id         Int    @id @default(autoincrement())
  title      String
  content    String @db.LongText
  flagHideYN String @default("N") @db.Char(1)
  userId     Int
  User       User   @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user_fk_2")

  @@index([userId], map: "user_fk_2_idx")
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  userId Int
  User   User    @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user_fk_1")

  @@index([userId], map: "user_fk_1_idx")
}

model User {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  password    String?
  name        String?
  nickname    String?
  phoneNumber String?
  address     String?
  role        String     @default("user")
  age         Int?
  createAt    DateTime?  @default(now())
  updateAt    DateTime?
  Bookmark    Bookmark[]
  Post        Post[]
  Profile     Profile[]
}
